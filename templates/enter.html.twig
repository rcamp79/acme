{% extends 'base.html.twig' %}

{% block title %}Order Entry{% endblock %}

{% block content %}
<div class="container-fluid enter-container">
    {{ form_start(form) }}
    <button type="button" class="btn btn-secondary add_item_link" data-collection-holder-class="cards">Add A Card</button>
    <div class="container">
        <ul class="cards" data-prototype="{{ form_widget(form.cards.vars.prototype)|e('html_attr') }}">
            {% for card in form.cards  %}
            <li class="row card_form">
                {{ form_row(card) }}
            </li>
            {% endfor %}
        </ul>
    </div>
    <hr>
    <button class="btn btn-success m-5" type="submit">Submit</button>
    {{ form_end(form) }}
</div>
{% endblock %}





